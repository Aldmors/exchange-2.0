@page
@model ExchangeServer.Pages.Documents.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Document</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Document.DocumentId" />
            <div class="form-group">
                <label asp-for="Document.ShipmentId" class="control-label"></label>
                <select asp-for="Document.ShipmentId" class="form-control" asp-items="ViewBag.ShipmentId"></select>
                <span asp-validation-for="Document.ShipmentId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Document.DocumentName" class="control-label"></label>
                <input asp-for="Document.DocumentName" class="form-control" />
                <span asp-validation-for="Document.DocumentName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Document.Type" class="control-label"></label>
                <input asp-for="Document.Type" class="form-control" />
                <span asp-validation-for="Document.Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Document.Status" class="control-label"></label>
                <input asp-for="Document.Status" class="form-control" />
                <span asp-validation-for="Document.Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Document.AdditionalInfo" class="control-label"></label>
                <input asp-for="Document.AdditionalInfo" class="form-control" />
                <span asp-validation-for="Document.AdditionalInfo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Document.CreateTime" class="control-label"></label>
                <input asp-for="Document.CreateTime" class="form-control" />
                <span asp-validation-for="Document.CreateTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
